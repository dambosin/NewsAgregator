@model NewsAgregator.Mvc.Models.Articles.ArticleCreateModel

<form asp-controller="Article" asp-action="Create" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Enter title">
    </div>
    <div class="form-group">
        <label >Short description</label>
        <textarea class="form-control" asp-for="ShortDescription" placeholder="Write here" rows="4"></textarea>
    </div>
    <div class="form-group">
        <label >Content</label>
        <textarea class="form-control" asp-for="Content" placeholder="Write here" rows="7"></textarea>
    </div>
    <div class="form-group">
        <label>Source select</label>
        <select class="form-control" asp-for="SourceId" asp-items="Model.AvailiableSources"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>