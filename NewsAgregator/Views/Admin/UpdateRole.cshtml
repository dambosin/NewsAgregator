@model NewsAgregator.Mvc.Models.Roles.RoleUpdateModel

<form asp-action="updateRole" asp-controller="Admin" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control"  type="text" asp-for="Name" value="@Model.Name" />
        <span asp-validation-for="Name"></span>        
    </div>
    <input asp-for="Id" value="@Model.Id" hidden />
    <button type="submit" class="btn btn-outline-success">Submit</button>
</form>