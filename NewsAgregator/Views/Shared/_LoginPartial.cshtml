@model NewsAgregator.Mvc.Models.Account.LoginModel
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Login</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label" asp-for="Login">Login</label>
                        <input type="text" class="form-control" asp-for="Login">
                        <span asp-validation-for="Login"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Password">Password</label>
                        <input type="password" class="form-control" asp-for="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>