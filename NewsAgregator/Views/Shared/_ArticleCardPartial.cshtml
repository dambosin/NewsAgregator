@model NewsAgregator.Mvc.Models.Articles.ArticleModel;

<div class="col-sm-12 col-md-6 col-lg-4">
    <div class="card bg-body-tertiary mb-3">
        <img src="@Model.UrlHeader" class="card-img-top">
        <div class="card-body">
            <h5 class="card-title"><a class="text-decoration-none link-success" asp-action="Detail" asp-controller="Article" asp-route-id="@Model.Id">@Model.Title</a></h5>
            <p class="card-text">@Html.Raw(Model.ShortDescription)</p>
            <p class="card-text"><small class="text-muted">@Model.PositiveIndex rate</small></p>
            <a asp-action="Detail" asp-controller="Article" class="visually-hidde stretched-link" asp-route-id="@Model.Id"></a>
        </div>
    </div>
</div>